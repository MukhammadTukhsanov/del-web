{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
